<div class="main-container" style="background-image: url(<%= image_path "Plane1.svg"%>), url(<%= image_path "Plane2.svg"%>), url(<%= image_path "Plane3.svg"%>), url(<%= image_path "Plane4.svg"%>), url(<%= image_path "Plane5.svg"%>)">
  <div class="banner">
    <div class="banner-text" style="background-image: url(<%= image_path 'tracked_logo.svg'%>")>
    </div>
    <div class="banner-form">
        <% if signed_in? %>
          <div class="welcome-back">
            <div class="text">
              <h2>Welcome back, <%= current_user.display_name %></h2>
              <button class="btn-full-width">
                <%= link_to "Your Dashboard", "users/#{current_user.id}" %>
              </button>
            </div>
          </div>
        <% else %>
      <div class="card log-in">
        <ul class="nav" id="myTab" role="tablist">
          <li class="nav-item-lavender">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#log-in" role="tab" aria-controls="home" aria-selected="true">Log in</a>
          </li>
          <li class="nav-item-lavender">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#sign-up" role="tab" aria-controls="profile" aria-selected="false">Sign up</a>
          </li>
        </ul>

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="log-in" role="tabpanel" aria-labelledby="home-tab">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions d-flex justify-content-center">
                <%= f.button :submit, "Log in", class: "btn-full-width" %>
              </div>
            <% end %>
          </div>
          <div class="tab-pane fade" id="sign-up" role="tabpanel" aria-labelledby="profile-tab">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :display_name,
                            required: true,
                            input_html: { autocomplete: "display_name" } %>
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>
                <%= f.input :password,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation,
                            required: true,
                            input_html: { autocomplete: "new-password" } %>
              </div>
              <div class="form-actions d-flex justify-content-center">
                <%= f.button :submit, "Sign up", class: "btn-full-width" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="info-cards-body">
    <div class="info-cards card">
      <div class="photo" style="background-image: url(<%= image_path "Step-1.svg"%>)">
      </div>
      <div class="text">
        <h5>Add a tracking number</h5>
      </div>
    </div>
    <div class="info-cards card">
      <div class="photo" style="background-image: url(<%= image_path "Step-2.svg"%>)">
      </div>
      <div class="text">
        <h5>Stay on top of your deliveries</h5>
      </div>
    </div>
    <div class="info-cards card">
      <div class="photo" style="background-image: url(<%= image_path "Step-3.svg"%>)">
      </div>
      <div class="text">
        <h5>Check their statuses</h5>
      </div>
    </div>
    <div class="info-cards card">
      <div class="photo" style="background-image: url(<%= image_path "Step-4.svg"%>)">
      </div>
      <div class="text">
        <h5>Enjoy your orders</h5>
      </div>
    </div>
  </div>

  <div class="couriers">
    <div class="couriers-image" style="background-image: url(<%= image_path 'Couriers17.png'%>")>
    </div>
  </div>

  <%= render "shared/footer" %>
</div>
