<div class="landing3">
  <div class="banner">
    <div class="login-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-full-wdith" %>
          <%= link_to "New member? Sign up", new_registration_path(resource_name), class: "sign-up" %>
        </div>
      <% end %>
    </div>
    <div class="banner-text">
      <div class="banner-title">
        <h1 id="tr">tr</h1>
        <h1 id="acked">acked</h1>
      </div>
      <div class="banner-tagline">
        <h2>all your deliveries, one place</h2>
      </div>
    </div>
  </div>
  <div class="info-card-body">
    <div class="info-card">
      <div class="photo">
        <%= image_tag "search", alt: "alttext" %>
      </div>
      <div class="text">
        <h5>Add your tracking number</h5>
      </div>
    </div>
    <div class="info-card">
      <div class="photo">
        <%= image_tag "truck", alt: "alttext" %>
      </div>
      <div class="text">
        <h5>Track your delivery</h5>
      </div>
    </div>
    <div class="info-card">
      <div class="photo">
        <%= image_tag "sell", alt: "alttext" %>
      </div>
      <div class="text">
        <p></p>
      </div>
    </div>
  </div>
</div>
