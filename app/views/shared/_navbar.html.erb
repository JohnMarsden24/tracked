<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "Home", root_path %>

       <ul class="nav" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#active" role="tab" aria-controls="home" aria-selected="true">Active</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#delivered" role="tab" aria-controls="profile" aria-selected="false">Delivered</a>
          </li>
            <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#settings" role="tab" aria-controls="profile" aria-selected="false">Settings</a>
          </li>
        </ul>


                <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="home-tab">
        <%= render "users/active" %>
          </div>
          <div class="tab-pane fade" id="delivered" role="tabpanel" aria-labelledby="profile-tab">
            <%= render "users/delivered" %>
          </div>
          <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab">
            <%= render "users/settings" %>
          </div>
        </div>

  <div class="search">
    <%= form_tag user_path, method: :get do %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find your parcel..."
      %>
      <%= submit_tag "Search", class: "btn btn-light" %>
    <% end %>
    </div>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <p>Good morning <%= current_user.display_name %></p>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <%= image_tag "https://media.istockphoto.com/vectors/triple-dots-three-dots-icon-vector-id957096060?k=6&m=957096060&s=170667a&w=0&h=VCnTUw1kqrkV4iZqvhXpo5bfBePdA6D7HVMrvLPBxcM=", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My stats", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  </div>
</div>
