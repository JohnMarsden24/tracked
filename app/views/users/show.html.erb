<h1>hello <%= @user.email %></h1>
  <div class="deliver-card-container">
      <% @user.deliveries.each do |delivery| %>
        <div class="delivery-card">
          <div class="detail-bar">
            <p>Name: <%= delivery.name %> | Tracking number: <%= delivery.tracking_number %> <br>
              Status: <%= delivery.status %> | Estimated delivery: <%= delivery.expected_arrival_date %>
              <% if delivery.histories != [] %>
                </p>
                <% delivery.histories.each do |history| %>
                  <p><%= history["message"] %> at <%= history["checkpoint_time"] %></p>
               <% end %>
              <% end %>
            </div>

            <% if delivery.courier == nil %>
              <%= image_tag "logo", class:"avatar", alt: "alttext" %>
                <% else %>
              <%= image_tag "#{delivery.courier}", class:"avatar", alt: "#{delivery.courier}"%>
            <% end %>
            <div class="tag-bar">
              <div class="tag-list">
                <% delivery.tags.each do |tag| %>
                  <span class="tag"><%= tag.name %></span>
                <% end %>
              </div>

              <div>
                <%= simple_form_for([delivery, @tag]) do |f| %>
                  <%= f.input :name, label: false, placeholder: "New tag"%>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
  </div>


<div class="new-delivery-form">
  <h2>Add new delivery</h2>
  <%= simple_form_for(@delivery) do |f| %>
    <%= f.input :name %>
    <%= f.input :tracking_number %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>

